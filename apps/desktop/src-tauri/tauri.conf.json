{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenHSB",
  "version": "0.1.0",
  "identifier": "com.openhsb.desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OpenHSB",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "minWidth": 500,
        "minHeight": 480,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
