{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Infimount",
  "version": "0.1.0",
  "identifier": "com.infimount.desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Infimount",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "minWidth": 500,
        "minHeight": 480,
        "dragDropEnabled": false,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "main"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
